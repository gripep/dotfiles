# Shortcuts
alias l="ls -la --color"

alias reload="exec zsh"

# Checks out a branch in all repos in the current directory
alias gco-r="find . -mindepth 1 -maxdepth 1 -type d -print -exec git -C {} checkout ${1} \;"
# Pulls all repos in the current directory
alias gl-r="find . -mindepth 1 -maxdepth 1 -type d -print -exec git -C {} pull \;"
# Deletes all branches of a repo but "main" and "master"
alias gbd-not="git branch | grep -v ${1} | xargs git branch -D"

# Named directories
#Â Using the `hash` command - it creates a dir hash (shortcut) in zsh only
hash -d projects=$HOME/Developer/src
alias projects=~projects

hash -d gripep=$HOME/Developer/src/gripep
alias gripep=~gripep

hash -d tmp=$HOME/Developer/tmp
alias tmp=~tmp
